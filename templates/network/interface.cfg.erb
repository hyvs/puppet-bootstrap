<%- if @auto -%>
auto <%= @name %>
<%- end -%>
<%- if 'loopback' == @type -%>
iface <%= @name %> inet loopback
<% elsif 'static' == @type -%>
iface <%= @name %> inet static
<%- if @ip -%>
    address <%= @ip %>
<%- end -%>
<%- if @netmask -%>
    netmask <%= @netmask %>
<%- end -%>
<%- if @network -%>
    network <%= @network %>
<%- end -%>
<%- if @broadcast -%>
    broadcast <%= @broadcast %>
<%- end -%>
<%- if @gateway -%>
    gateway <%= @gateway %>
<%- end -%>
<%- end -%>
