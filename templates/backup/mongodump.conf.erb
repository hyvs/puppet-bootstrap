export BM_REPOSITORY_ROOT="<%= @root %>"
export BM_REPOSITORY_SECURE="true"
export BM_REPOSITORY_USER="root"
export BM_REPOSITORY_GROUP="root"
export BM_REPOSITORY_CHMOD="770"
export BM_REPOSITORY_RECURSIVEPURGE="false"
export BM_TEMP_DIR="/tmp"

export BM_ARCHIVE_METHOD="pipe"
export BM_ARCHIVE_CHMOD="660"
export BM_ARCHIVE_TTL="5"
export BM_ARCHIVE_PURGEDUPS="true"
export BM_ARCHIVE_NICE_LEVEL="10"
export BM_ARCHIVE_PREFIX="backup"
export BM_ARCHIVE_STRICTPURGE="false"

export BM_LOGGER="true"
export BM_LOGGER_LEVEL="warning"
export BM_LOGGER_FACILITY="user"

BM_PIPE_COMMAND[0]="/etc/backup-manager/mongodump.sh <%= has_variable?('host') ? @host : '127.0.0.1' %>"
BM_PIPE_NAME[0]="mongodump"
BM_PIPE_FILETYPE[0]="tar.gz"
BM_PIPE_COMPRESS[0]=""