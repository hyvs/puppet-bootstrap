AddDefaultCharset UTF-8
<% if @types -%>
    <% @types.each do |extension, contentType| -%>
AddType <%= contentType %> <%= extension %>
    <% end -%>
<% end -%>

<% if @expires -%>
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "now"
    <% @expires.each do |name, val| -%>
    ExpiresByType <%= name %> "<%= val %>"
    <% end -%>
</IfModule>
<% end -%>
