[<%= @name %>]
type = "LogstreamerInput"
decoder = "<%= @name %>_decoder"
<%- if @splitter -%>
splitter = "<%= @splitter %>"
<% end -%>
log_directory = "<%= @directory %>"
file_match = "<%= @file %>"

[<%= @name %>_decoder]
type = "MultiDecoder"
subs = ["<%= @type %>_decoder", "severity_text_decoder", "scribble_server"<% if @app %>, "scribble_app_<%= @app %>"<% end %><% if @env %>, "scribble_env_<%= @env %>"<% end %>]
cascade_strategy = "all"
log_sub_errors = true
